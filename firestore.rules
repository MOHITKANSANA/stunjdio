
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading the list of users for any authenticated user (for the admin panel)
    // and allow users to read/write their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
